<div class="row row-cols-lg-3 row-cols-md-3 mt-3 row-cols-sm-1 mt-3">
  <% for (let listing of allListings) { %>
    <a href="/listings/<%= listing._id %>" class="listing-link" style="text-decoration: none;">
      <div class="card col listing-card">
        <!-- Image Section -->
        <img 
          class="card-img-top" 
          src="<%= listing.image.url %>" 
          alt="listing_image" 
          style="height: 20rem" />

        <!-- Card Body -->
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b> <br>
            &#8377; <%= listing.price %> /Night 
            <i class="tax-info">&nbsp;+18% GST</i>
          </p>
        </div>
      </div>
    </a>
  <% } %>
</div>

<script>
    // Restore toggle state from localStorage
    let taxSwitch = document.getElementById("switchCheckDefault");
    let taxInfo = document.getElementsByClassName("tax-info");
    // Set initial state on page load
    window.addEventListener("DOMContentLoaded", () => {
      const checked = localStorage.getItem("taxSwitchChecked") === "true";
      taxSwitch.checked = checked;
      for (let info of taxInfo) {
        info.style.display = checked ? "inline" : "none";
      }
    });
    // Save state and toggle tax info on change
    taxSwitch.addEventListener("change", () => {
      localStorage.setItem("taxSwitchChecked", taxSwitch.checked);
      for (let info of taxInfo) {
        info.style.display = taxSwitch.checked ? "inline" : "none";
      }
    });

    // Make filters clickable and highlight active one:-

    const filters = document.querySelectorAll('.filter');
    filters.forEach(filter => {
      filter.addEventListener('click', function() {
        filters.forEach(f => f.classList.remove('active-filter'));
        this.classList.add('active-filter');
        // You can add your filter logic here (e.g., AJAX/filter listings)
        const filterName = this.querySelector('p').innerText.trim();
        window.location.href = `/listings?category=${encodeURIComponent(filterName)}`;
      });
    }); 

</script>